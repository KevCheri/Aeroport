{% extends 'base.html.twig' %}

{% block title %}Vol index{% endblock %}

{% block body %}
    <h1>Vol index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateDepart</th>
                <th>DateArrivee</th>
                <th>VilleDepart</th>
                <th>VilleArrivee</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vol in vols %}
            <tr>
                <td>{{ vol.id }}</td>
                <td>{{ vol.DateDepart ? vol.DateDepart|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ vol.DateArrivee ? vol.DateArrivee|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ vol.VilleDepart }}</td>
                <td>{{ vol.VilleArrivee }}</td>
                <td>
                    <a class="btn btn-primary btn-xs" href="{{ path('vol_show', {'id': vol.id}) }}">Voir</a>
                    <a class="btn btn-primary btn-xs" href="{{ path('vol_edit', {'id': vol.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('vol_new') }}">Nouveau vol</a>
{% endblock %}
