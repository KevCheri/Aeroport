{% extends 'base.html.twig' %}

{% block title %}Vol{% endblock %}

{% block body %}
    <h1>Vol</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vol.id }}</td>
            </tr>
            <tr>
                <th>DateDepart</th>
                <td>{{ vol.DateDepart ? vol.DateDepart|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateArrivee</th>
                <td>{{ vol.DateArrivee ? vol.DateArrivee|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>VilleDepart</th>
                <td>{{ vol.VilleDepart }}</td>
            </tr>
            <tr>
                <th>VilleArrivee</th>
                <td>{{ vol.VilleArrivee }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn-default" href="{{ path('vol_index') }}">Retour</a>

    <a class="btn-default" href="{{ path('vol_edit', {'id': vol.id}) }}">Modifier</a>

    {{ include('vol/_delete_form.html.twig') }}
{% endblock %}
