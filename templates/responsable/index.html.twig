{% extends 'base.html.twig' %}

{% block title %}Responsable index{% endblock %}

{% block body %}
    <h1>Responsable index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for responsable in responsables %}
            <tr>
                <td>{{ responsable.id }}</td>
                <td>{{ responsable.nom }}</td>
                <td>{{ responsable.prenom }}</td>
                <td>
                    <a href="{{ path('responsable_show', {'id': responsable.id}) }}">Voir</a>
                    <a href="{{ path('responsable_edit', {'id': responsable.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('responsable_new') }}">Créer un Responsable</a>
    <p><a href="{{ path('admin') }}">retour</a></p>
{% endblock %}
